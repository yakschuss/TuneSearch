<div class="container top-container">

  <h1 class="header center">TuneSearch</h1>

  <div class="row form-group form-centered center">
    <%= form_for :search_bar, url: search_path, remote: true do |f| %>
      <div class="row search-bar center">
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <%= f.text_field :song_title, class: "form-control", placeholder: "Song Name" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <%= f.text_field :artist_name, class: "form-control", placeholder: "Artist Name"%>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <%= f.text_field :album_title, class: "form-control", placeholder: "Album Name" %>
        </div>
      </div>
      <div class="row submit-button center">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 button-form center">
          <%= f.submit "Search", class: "btn btn-default btn-submit" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="container lower-container">
  <ul class="data-list text-center">
    <% Song.first(100).each do |song| %>
      <li class="row music-data text-center">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 song-title">
          <span class="meta-data">Song:</span> <%= song.song_title %>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 album-title">
          <span class="meta-data">Album:</span> <%= song.album.album_title %> 
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 artist-name">
          <span class="meta-data">Artist:</span> <%= song.artist.artist_name %> 
          <!--  n + 1 queries, not final ; just testing data UI -->
        </div>
      </li>
    <% end %>
  </ul>
</div>
