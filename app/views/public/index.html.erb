<div class="container top-container">

  <h1 class="header center">TuneSearch</h1>

  <div class="row form-group form-centered center">
    <%= form_for :search_bar, url: search_path, remote: true do |f| %>
      <div class="row search-bar center">
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <%= f.text_field :song_title, class: "form-control", placeholder: "Song Name" %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <%= f.text_field :artist_name, class: "form-control", placeholder: "Artist Name"%>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
          <%= f.text_field :album_title, class: "form-control", placeholder: "Album Name" %>
        </div>
      </div>
      <div class="row submit-button center">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 button-form center">
          <%= f.submit "Search", class: "btn btn-default btn-submit" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div id="results-target" class="container lower-container"></div>
