<div class="container">
  <div class="row">
    <h1>TuneSearch</h1>
  </div>

  <div class="row form-group">
    <%= form_for :search, url: '#', remote: true do |f| %>
      <div class="row">
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <%= f.text_field :song_name, class: "form-control", placeholder: "Song Name" %>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <%= f.text_field :artist_name, class: "form-control", placeholder: "Artist Name"%>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <%= f.text_field :album_name, class: "form-control", placeholder: "Album Name" %>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
          <%= f.submit "Search", class: "btn btn-default" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
